%%inherit(file="/_main.haml")/

%ol.breadcrumb
    %li
        %a(href='/') %img(src="/img/git-logo.png")
    %li
        &= group.name
    %li
        repositories

- for repo in group.repos:
    .media
        %a.pull-left(href='#')
            - size = 64
            %img.thumbnail.media-object(src=resized_img_src('/img/git-logo-pale.png', width=size, height=size), width=size, height=size)

        .media-body
            %h4.media-heading %a(href=url_for('repo', repo=repo))
                &= repo.name
            %p&= 'No description.'
