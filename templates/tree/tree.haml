%%inherit(file="/_main.haml")
%%namespace(name='blob_utils', file='/blob/_utils.haml')
%%namespace(name='repo_utils', file='/repo/_utils.haml')
%%namespace(name='tree_utils', file='./_utils.haml')
%%namespace(name='utils', file='/_utils.haml')
-
    group = repo.group

@breadcrumb
    %li
        %a(href=url_for('group', group=repo.group)) &= repo.group.name
    %li
        %a(href=url_for('repo', repo=repo)) &= repo.name
    %li
        %a(href=url_for('tree', repo=repo, ref=ref)) files

    - chunks = path.strip('/').split('/')
    - for i, chunk in enumerate(chunks):
        %li
            - if i + 1 < len(chunks):
                %a(href=url_for('tree', repo=repo, path='/'.join(chunks[:i + 1]))) &= chunk
            - else:
                &= chunk

+repo_utils.media(repo, link=False, avatar_size=128)

%ul.nav.nav-tabs

    %li %a(href=url_for('repo', repo=repo))
        +utils.icon('signal')
        Overview

    %li %a(href=url_for('commits', repo=repo))
        +utils.icon('list')
        Commits
    
    %li.active %a(href='#')
        +utils.icon('folder-open')
        Files


+tree_utils.render_tree(repo, tree, path)

